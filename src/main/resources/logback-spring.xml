<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 변수 설정 -->
    <property name="LOG_PATH" value="./logs"/>
    <property name="LOG_FILE_NAME" value="application"/>
    <property name="ERR_LOG_FILE_NAME" value="error"/>
    
    <!-- 콘솔 출력 패턴 (개발용: 컬러 적용) -->
    <!-- %clr(...){color}: 색상 적용, %X{requestId}: MDC의 requestId 출력 -->
    <property name="CONSOLE_LOG_PATTERN" 
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} : %clr([req=%X{requestId:-SYSTEM}, user=%X{userId:-ANON}]){yellow} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- 파일 출력 패턴 (운영용: 깔끔함 위주) -->
    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${PID:- } --- [%t] %-40.40logger{39} : [req=%X{requestId:-SYSTEM}, user=%X{userId:-ANON}] %m%n%wEx"/>

    <!-- 1. 콘솔 앱펜더 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. 파일 앱펜더 (일반 로그) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 날짜별 로그 파일 생성 (예: application-2026-01-14.log) -->
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 30일치 보관 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 3. 에러 파일 앱펜더 (ERROR 레벨만 따로 저장) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <file>${LOG_PATH}/${ERR_LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${ERR_LOG_FILE_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory> <!-- 에러는 좀 더 길게 60일 -->
        </rollingPolicy>
    </appender>

    <!-- 로거 설정 -->
    
    <!-- 기본 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- 상세 로거 설정 (application.properties보다 우선순위 높음) -->
    <!-- SQL 로그: 개발 중에만 DEBUG, 운영에선 INFO 이상 권장 -->
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>

    <!-- 잡다한 로그 줄이기 -->
    <logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
    <logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
    <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
    <logger name="org.apache.tomcat.util.net.NioSelectorPool" level="WARN"/>
    <logger name="org.hibernate.validator.internal.util.Version" level="WARN"/>
</configuration>
